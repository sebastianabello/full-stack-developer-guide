extends layout

block content
  main.container
    h1.text-center= title
    p Welcome to #{title}
    div.text-right 
      a.add-button(href="/add") Agregar tarea
    ul.task-list
      if tasks.length === 0
        li 
          b.text-center No tienes tareas por hacer
      else
        each task in tasks
          li(class=task.isCompleted ? "done" : "")
            a.task-title(href=`/edit/${task.id}`) #{task.title}
            div.task-item
              if task.isCompleted
                a.uncomplete-button(href=`/uncomplete/${task.id}`) Desmarcar
              else
                a.complete-button(href=`/complete/${task.id}`) Marcar
              a.delete-button(href=`/delete/${task.id}`) Eliminar